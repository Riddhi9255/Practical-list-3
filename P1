//1. Write a C++ program that declares student structure with data 
members name, std, percentage. Take value for these data members and dipaly it

#include <iostream>
#include <string>
using namespace std;
// Define the student structure
struct Student {
    string name;
    int std; // Class/standard
    float percentage;
};

int main() {
    Student student;

    // Input student details
    cout << "Enter student name: ";
    getline(std::cin, student.name);
     cout<<"mahemdavadi riddhi j", "220130318035"<<endl;
    cout << "Enter student class/standard: ";
    cin >> student.std;

    cout << "Enter student percentage: ";
    cin >> student.percentage;

    // Display student details
    cout << "Student Information:" << std::endl;
    cout << "Name: " << student.name << std::endl;
    cout << "Class/Standard: " << student.std << std::endl;
    cout << "Percentage: " << student.percentage << "%" << std::endl;

    return 0;
}
